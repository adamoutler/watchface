<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigandroidbbq"
    android:versionCode="100"
    android:versionName="0.0.1.0" >

    <uses-sdk
        android:minSdkVersion="20"
        android:targetSdkVersion="20" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />

    <application
        android:name="com.bigandroidbbq.WatchfaceApp"
        android:label="BigAndroidBBQ" >
        <activity
            android:name="com.bigandroidbbq.activity.WatchfaceActivity"
            android:allowEmbedded="true"
            android:label="BigAndroidBBQ"
            android:taskAffinity=""
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar" >
            <meta-data
                android:name="com.google.android.clockwork.home.preview"
                android:resource="@drawable/preview" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.google.android.clockwork.home.category.HOME_BACKGROUND" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bigandroidbbq.activity.WatchfaceDigitalActivity"
            android:allowEmbedded="true"
            android:label="Digital"
            android:taskAffinity=""
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar" >
            <meta-data
                android:name="com.google.android.clockwork.home.preview"
                android:resource="@drawable/digitalpreview" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.google.android.clockwork.home.category.HOME_BACKGROUND" />
            </intent-filter>
        </activity>
    </application>

</manifest>