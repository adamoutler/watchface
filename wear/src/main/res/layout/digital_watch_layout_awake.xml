<?xml version="1.0" encoding="utf-8" ?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roundwatchrelative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_column="2"
    android:layout_marginTop="0dp"
    android:layout_row="0"
    android:background="@color/black">


    <!--background logo -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="start|top"
        android:contentDescription="@string/logo"
        android:src="@drawable/digital_background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- Left-side margin -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".25" />

        <!-- Content aligned left-/right-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight=".55"

            android:orientation="vertical">
            <!-- Top Margin -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".20"
                tools:ignore="NestedWeights" />

            <!-- Time -->
            <com.casual_dev.CASUALWatch.widget.MyTextView
                android:id="@+id/timeawake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight=".01"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:maxLines="1"
                android:padding="0dp"
                android:text="@string/dummytime"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="normal" />


            <!-- Bottom margin -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>


        <!-- Right-side margin -->

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".1"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/dateawake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/dummydate"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        tools:ignore="RelativeOverlap" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center|bottom"
        android:layout_margin="0dp"
        android:divider="#000000"
        android:dividerPadding="0dp"
        android:gravity="end"
        android:maxLines="1"
        android:orientation="vertical"
        android:padding="0dp"
        android:showDividers="middle"
        android:weightSum="1">


        <TextView
            android:id="@+id/LogoText"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="0dp"
            android:maxLines="1"
            android:padding="0dp"
            android:text="@string/casual"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3898ca"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center|top"
            android:layout_margin="0dp"
            android:layout_weight=".01"
            android:maxLines="1"
            android:orientation="horizontal"
            android:padding="0dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:text="@string/dev"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/grey"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded,RtlSymmetry" />


            <TextView
                android:id="@+id/randomness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"

                android:padding="0dp"
                android:text="@string/evelopment"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#3898ca"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>



