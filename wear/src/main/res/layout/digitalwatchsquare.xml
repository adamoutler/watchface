<?xml version="1.0" encoding="utf-8" ?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CASUAL="http://schemas.android.com/apk/res-auto"

    android:id="@+id/roundwatchrelative"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_column="2"
    android:layout_row="0">

    <!--gray background color-->
    <ImageView
        android:id="@+id/grayBackColor"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/graybackgrounddescription" />

    <!--background logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="left|top"
        android:contentDescription="@string/logo"
        android:src="@drawable/digback" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp"
        android:orientation="horizontal">

        <!-- Left-side margin -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".07" />

        <!-- Content aligned left-/right-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:layout_weight=".3"
            android:orientation="vertical">
            <!-- Top Margin -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".35" />

            <!-- Time -->
            <com.casual_dev.watch.MyTextView
                android:id="@+id/time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight=".01"
                android:background="@color/dark_blue"
                android:gravity="center"
                android:maxLines="1"
                android:shadowColor="@color/dark_blue"
                android:text="@string/dummytime"
                android:textSize="40sp"
                CASUAL:fontName="digital-7 (mono).ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="0dp"
                android:layout_weight=".1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/babbqText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:fontFamily="sans-serif-light"
                    android:text="#BABBQ  "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/blueFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:fontFamily="sans-serif-light"
                    android:text="5  "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#3fa9f5"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- Bottom margin -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".8" />
        </LinearLayout>


        <!-- Right-side margin -->

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight=".18"

            />
    </LinearLayout>

    <TextView

        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/dummydate"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff000000" />




</RelativeLayout>


